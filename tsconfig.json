{
    "compilerOptions":  {
                            "target":  "ES2021",
                            "module":  "NodeNext",
                            "moduleResolution":  "NodeNext",
                            "strict":  true,
                            "esModuleInterop":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "skipLibCheck":  true,
                            "resolveJsonModule":  true,
                            "declaration":  true,
                            "outDir":  "dist",
                            "rootDir":  "src"
                        },
    "include":  [
                    "src",
                    "tests",
                    "scripts",
                    "app/src"
                ]
}
